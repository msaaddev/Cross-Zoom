{
	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "58.0a1"
		}
	},
	"manifest_version": 2,
	"version": "1.0",
	"name": "Cross Zoom",
	"description": "A cross browser extension built for zooming a page to user's defined zoom as soon as page gets load",
	"author": "Muhammad Saad",

	"background": {
		"scripts": ["js/zoom.js"]
	},
	"browser_action": {
		"default_title": "Cross Extension",
		"default_popup": "html/popup.html",
		"default_icon": {
			"16": "image/image.png"
		}
	},

	"permissions": ["activeTab", "tabs", "contextMenu"]
}
