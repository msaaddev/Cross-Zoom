{
	"manifest_version": 2,
	"version": "1.0",
	"name": "Cross Zoom",
	"description": "A cross browser extension built for zooming a page to user's defined zoom as soon as page gets load",
	"author": "Muhammad Saad",

	"background": {
		"script": ["lib/jquery.js"]
	},
	"browser_action": {
		"default_title": "Cross Extension",
		"default_popup": "html/popup.html"
	},

	"content_scripts": {
		"matches": ["<all-urls>"],
		"js": ["lib/jquery.js", "lib/sweetalert.js", "zoom.js"]
	},

	"content_security_policy": "script-src 'self' object-src 'self'"
}
